{% extends 'base.html.twig' %}

{% block title %}Running{% endblock %}

{% block body %}
    <h1>Running</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ running.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ running.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ running.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ running.date ? running.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Distance_km</th>
                <td>{{ running.distanceKm }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ running.location }}</td>
            </tr>
            <tr>
                <th>Coordinates</th>
                <td>{{ running.coordinates }}</td>
            </tr>
            <tr>
                <th>Entry_fee</th>
                <td>{{ running.entryFee }}</td>
            </tr>
            <tr>
                <th>Available_slots</th>
                <td>{{ running.availableSlots }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ running.status }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ running.category }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ running.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_running_index') }}">back to list</a>

    <a href="{{ path('app_running_edit', {'id': running.id}) }}">edit</a>

    {{ include('running/_delete_form.html.twig') }}
{% endblock %}
