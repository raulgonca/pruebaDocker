{% extends 'base.html.twig' %}

{% block title %}TrailRunningParticipant index{% endblock %}

{% block body %}
    <h1>TrailRunningParticipant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Time</th>
                <th>Dorsal</th>
                <th>Banned</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trail_running_participant in trail_running_participants %}
            <tr>
                <td>{{ trail_running_participant.id }}</td>
                <td>{{ trail_running_participant.time ? trail_running_participant.time|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ trail_running_participant.dorsal }}</td>
                <td>{{ trail_running_participant.banned ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_trail_running_participant_show', {'id': trail_running_participant.id}) }}">show</a>
                    <a href="{{ path('app_trail_running_participant_edit', {'id': trail_running_participant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trail_running_participant_new') }}">Create new</a>
{% endblock %}
